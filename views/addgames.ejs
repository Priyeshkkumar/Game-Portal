<%- include('partials/header') %>


<div class="container main" >
    <h1 class="text-center" >Add Game Here</h1>

    <!-- form to take Game Related Details -->
    <form action="/addgames" method="POST" enctype="multipart/form-data" >
        <h2>Game Details</h2>
        <div class="form-group">
          <label for="gameName">Game Name</label>
          <input type="text" class="form-control" name="gameName" placeholder="Ex: Need For Speed" >
        </div>
        <div class="form-group">
          <label for="creatorName">Creator Name</label>
          <input type="text" class="form-control" name="creatorName" placeholder="Ex: EA" >
        </div>
        <div class="form-group">
            <label for="creatorName">Size</label>
            <input type="text" class="form-control" name="gameHeight" placeholder="Ex: 600" >
            <input type="text" class="form-control" name="gameWidth" placeholder="Ex: 480" >
          </div>
        <h2>Upload Files</h2>
        <div class="custom-file">
            <input type="file" class="custom-file-input" name="gameFile">
            <label class="custom-file-label" for="gameFile">Game(.swf) File</label>
        </div>
        <div class="custom-file">
            <input type="file" class="custom-file-input" name="thumbnailFile">
            <label class="custom-file-label" for="thumbnailFile">Thumbnail</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

</div>

<%- include('partials/footer') %>
