<%- include('partials/header'); %>

<div class="container" >
    <div class="card-deck">
        <div class="row">
            <% for(var i = 0;i < gamesList.length; i++){ %>
                <div class="col-md-4">
                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top" src="#" style="height: 180px">
                        <div class="card-body">
                        <h5 class="card-title"><%= gamesList[i].gameName %></h5>
                        <p class="card-text">Game created by <%= gamesList[i].creatorName %></p>
                        <a href="/game/<%= gamesList[i].id %>" class="btn btn-primary">Play Game</a>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </div>
</div>

<%- include('partials/footer'); %>
